##
##  Makefile -- Build procedure for sample fleropp_fcgi Apache module
##  Autogenerated via ``apxs -n fleropp_fcgi -g''.
##

builddir=.
top_srcdir=/usr/share/apache2
top_builddir=/usr/share/apache2
include /usr/share/apache2/build/special.mk

CXX=g++
CXXFLAGS=-std=c++17

#   the used tools
APACHECTL=docker restart fleropp-dev

#   additional defines, includes and libraries
#DEFS=-Dmy_define=my_value
#INCLUDES=-Imy/include/dir
#LIBS=-Lmy/lib/dir -lmylib

#   the default target
all: local-shared-build copy-build clean

copy-build:
	cp -RL .libs/* obj/

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_fleropp_fcgi.o mod_fleropp_fcgi.lo mod_fleropp_fcgi.slo mod_fleropp_fcgi.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/fleropp_fcgi

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
restart:
	$(APACHECTL)


